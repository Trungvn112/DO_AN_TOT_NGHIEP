@using ShopVongTay.Models;
@model List<SanPham>
@{
    Layout = null;
}


<div class="product-slider owl-carousel">
    @foreach (var item in Model)
    {
        <div class="product-item">
            <div class="pi-pic">
                <img src="~/img/sanpham/@item.HinhAnh" alt="">
