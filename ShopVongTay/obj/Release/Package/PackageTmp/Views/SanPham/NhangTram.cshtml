<!-- Product Shop Section Begin -->
<section class="product-shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-8 order-2 order-lg-1 produts-sidebar-filter">
                <div class="filter-widget">
                    <h4 class="fw-title">Sản Phẩm</h4>
                    <ul class="filter-catagories">
                        <li><a href="@Url.Action("SanPham","Home")">Tất Cả Các Sản Phẩm</a></li>
                        <li><a href="@Url.Action("SanPhamNam","SanPham")">Vòng Tay Nam</a></li>
                        <li><a href="@Url.Action("SanPhamNu","SanPham")">Vòng Tay Nữ</a></li>
                        <li><a href="@Url.Action("VongTay108","SanPham")">Vòng Tay 108</a></li>
                        <li><a href="@Url.Action("VongTayTyHuu","SanPham")">Vòng Tay Tỳ Hưu</a></li>
                        <li><a href="@Url.Action("VongTayBocVang","SanPham")">Vòng Tay Bọc Vàng</a></li>
                        <li><a href="@Url.Action("TramHuongChim","SanPham")">Trầm Hương Chìm</a></li>
                        <li><a href="@Url.Action("PhuKien","SanPham")">Phụ Kiện</a></li>
                        <li><a href="@Url.Action("NhangTram","SanPham")" style="color: red;">Nhang Trầm Hương</a></li>
                    </ul>
                </div>
                <!-- Filter -->
                <div class="filter-widget">
                    <h4 class="fw-title">Giá</h4>
                    <div class="filter-range-wrap">
                        <div class="range-slider">
                            <div class="price-input">
                                <input type="text" id="minamount">
                                <input type="text" id="maxamount">
                            </div>
                        </div>
                        <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                             data-min="0" data-max="1000">
                            <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                            <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                            <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                        </div>
                    </div>
                    <a href="#" class="filter-btn">Lọc</a>
                </div>

                <!-- Filter -->

            </div>
            <div class="col-lg-9 order-1 order-lg-2" style="
    background-color: #fbfbfb">
                @*<div class="product-show-option">
                    <div class="row">
                        <div class="col-lg-7 col-md-7">
                            <div class="select-option">
                                <select class="sorting">
                                    <option value="">Default Sorting</option>
                                </select>
                                <select class="p-show">
                                    <option value="">Show:</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-5 text-right">
                            <p>Hiển thị 01- 09 của 36 sản phẩm</p>
                        </div>
                    </div>
                </div>*@
                <div class="product-list">
                    <div class="row">
                        <div class="col-lg-4 col-sm-6">
                            @foreach (var item in Model)
                            {
                                <div class="product-item">
                                    <div class="pi-pic">
                                        <img src="~/img/sanpham/@item.HinhAnh" alt="">
                                        <div class="icon">
                                            <i class="icon_heart_alt"></i>
                                        </div>
                                        <ul>
                                            <li class="w-icon active"><a a id="txtmua" onclick="DatHang(@item.MaSP)"><i class="icon_bag_alt"></i></a></li>
                                            <li class="quick-view"><a id="myBtn" onclick="Popup(@item.MaSP)"><i class="fa fa-eye" aria-hidden="true"></i> Xem Nhanh</a></li>
                                            <li class="w-icon"><a href="~/ViewSanPham/ChiTietSanPham?MaSP=@item.MaSP"><i class="fa fa-random"></i></a></li>
                                        </ul>
                                    </div>
                                    <div class="pi-text">
                                        <div class="catagory-name">@item.LoaiSP.TenLoai</div>
                                        <a href="#">
                                            <h5>@item.TenSP</h5>
                                        </a>
                                        <div class="product-price">
                                            @string.Format("{0:0,0}", item.DonGia)đ
                                        </div>
                                    </div>
                                </div>

                            }
                        </div>
                        <div class="col-lg-4 col-sm-6">
                            @Html.Action("NhangTram_1", "SanPham")
                        </div>

                        <div class="col-lg-4 col-sm-6">
                            @Html.Action("NhangTram_2", "SanPham")
                        </div>
                        <span style="visibility:hidden" id="username">@Session["Email"]</span>
                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
