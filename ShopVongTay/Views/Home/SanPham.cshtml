                        <li><a href="#"><span class="fa fa-chevron-right"></span>Từ giá  </a></li>
                    </ul>*@

                    @*<a href="#" class="filter-btn">Lọc</a>*@
                </div>

                <!-- Filter -->

            </div>
            <div class="col-lg-9 order-1 order-lg-2">
                <div class="product-show-option">
                    <div class="row">
                        <div class="col-lg-7 col-md-7">

                            @using (Html.BeginForm("SanPham", "Home", FormMethod.Get))
                            {
                                <p>
                                    Hiển thị @Html.DropDownList("size", (List<SelectListItem>)ViewBag.size, new { @onchange = "this.form.submit();" })
                                    @Html.Hidden("page", (object)ViewBag.page)
                                    @Html.Hidden("sortProperty", (object)ViewBag.sortProperty)
                                    @Html.Hidden("sortOrder", (object)ViewBag.sortOrder)
                                    @Html.Hidden("searchString", (object)ViewBag.searchValue)
                                </p>
                            }
                        </div>

                        <div class="show-entries">

                        </div>
                        <div class="col-lg-5 col-md-5 text-right">
                            <p>Hiển thị @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) trong số @Model.PageCount mục</p>
                        </div>
                    </div>
                </div>
                <div class="product-list">
                    <div class="row">

                        @foreach (var item in Model)
                        {
                            <div class="sanpham">
                                <div class="pi-pic">
                                    <img src="~/img/sanpham/@item.HinhAnh" alt="">

                                    <ul>
                                        <li class="w-icon active"><a id="txtmua" onclick="DatHang(@item.MaSP)"><i class="icon_bag_alt"></i></a></li>
                                        <li class="quick-view"><a id="myBtn" onclick="Popup(@item.MaSP)"><i class="fa fa-eye" aria-hidden="true"></i> Xem Nhanh</a></li>
                                        <li class="w-icon"><a href="~/ViewSanPham/ChiTietSanPham?MaSP=@item.MaSP&MaLoai=@item.MaLoai"><i class="fa fa-random"></i></a></li>
                                    </ul>
                                </div>
                                <div class="pi-text">
                                    <div class="catagory-name">@item.LoaiSP.TenLoai</div>
                                    <a href="#">
                                        <h5>@item.TenSP</h5>
                                    </a>
                                    <div class="product-price">
                                        @string.Format("{0:0,0}", item.DonGia)đ
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                    <div id="myModal" class="modal">
                        <!-- Modal content -->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2>THÔNG TIN SẢN PHẨM</h2>
                                <span class="close">&times;</span>

                            </div>
                            <div class="modal-body">



                            </div>
                            <div class="modal-footer">

                            </div>
                        </div>
                    </div>

                    <span style="visibility:hidden" id="username">@Session["Email"]</span>
                </div>
                <div class="clearfix">

                    <ul class="pagination">

                        <li class="page-item">@Html.PagedListPager(Model, page => Url.Action("SanPham", new { page, size = ViewBag.currentSize }))</li>

                    </ul>
                </div>
            </div>

        </div>
    </div>

    <script>
        // Get the modal
        var modelz = document.getElementById("myModal");

        // Get the button that opens the modal

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];
        var btn = document.getElementById("myBtn");

        // When the user clicks the button, open the modal

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modelz.style.display = "none";
        }


        // When the user clicks anywhere outside of the modal, close it cái dòng scrip này là để n hiện popup nè . còn cái onclik popup là để láy dữ liệu thôi. m để dưới n đâu ăn js đâu
        window.onclick = function (event) {
            if (event.target == modelz) {
                modal.style.display = "none";
            }
        }
    </script>

</section>
